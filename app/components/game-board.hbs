<div class="container text-center mt-5 p-3 bg-light border game-board">
  {{#each this.gridRowNumbers as |rowNumber|}}
    <div class="row justify-content-center">
      {{#each this.gridColumnNumbers as |columnNumber|}}
        <div
          class={{this.cellClass rowNumber columnNumber}}
          data-position={{this.calculatePosition rowNumber columnNumber}}
          {{on "click" this.playCell}}
          {{on "mouseenter" this.mouseEnterCell}}
          {{on "mouseleave" this.mouseLeaveCell}}
        ></div>
      {{/each}}
    </div>
  {{/each}}
</div>
<div class="container text-center mt-5">
  {{#if this.isGameOver}}
    {{#if this.isDraw}}
      <h5>Draw!</h5>
    {{else}}
      {{#if this.isPlayer1Turn}}
        <h5>Player 2 (o) won!</h5>
      {{else}}
        <h5>Player 1 (x) won!</h5>
      {{/if}}
    {{/if}}
  {{else}}
    {{#if this.isPlayer1Turn}}
      <h5>Player 1 (x) turn</h5>
    {{else}}
      <h5>Player 2 (o) turn</h5>
    {{/if}}
  {{/if}}
  <button
    type="button"
    class="btn btn-outline-secondary rounded-0 btn-lg mt-2"
    {{on "click" this.restartGame}}
  >Restart</button>
</div>
